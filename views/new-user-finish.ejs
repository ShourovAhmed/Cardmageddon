                <input type="password" id="password1" name="password1" <%if(locals.password){%>value="<%=password%>"<%}%> required>
                <br>
                <label for="password">Paswoord nogmaals</label>
                <br>
                <input type="password" id="password2" name="password2" <%if(locals.password){%>value="<%=password%>"<%}%> required>
